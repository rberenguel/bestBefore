{
  "manifest_version": 3,
  "name": "Best before",
  "version": "0.1",
  "description": "Automatically closes tabs on their expiration date",
  "permissions": ["activeTab", "storage", "alarms", "tabs"],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "128": "media/icon128.png",
    "48": "media/icon48.png"
  }
}
